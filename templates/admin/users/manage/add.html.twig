{% extends '_layouts/admin.html.twig'%}

{% block title %} Add {% endblock %}
{% block h1 %} Add User{% endblock %}
{% block body %}
	<div class="container">
		<div class="pt-5 mb-5">
            <h3>Ajouter un utilisateur</h3>
            <hr>
        </div>
        <div class="card o-hidden border-0 shadow-lg my-5">
            <div class="card-body p-0">
                <!-- Nested Row within Card Body -->
                <div class="row">
                    <div class="col-lg-5 d-none d-lg-block bg-register-image"></div>
                    <div class="col-lg-7">
                        <div class="p-5">
                            <div class="text-center">
                                <h1 class="h4 text-gray-900 mb-4">Create an Account</h1>
                            </div>
                            {{ form_start(registrationForm, {'attr': {'class': 'user'}}) }}
                                <div class="row">
                                    <div class="col-sm-6 mb-sm-0">
                                        {{ form_row(registrationForm.firstName) }}
                                    </div>
                                    <div class="col-sm-6">
                                        {{ form_row(registrationForm.lastName) }}
                                    </div>
                                </div>
                                <div class="form-group">
                                    {{ form_row(registrationForm.email) }}
                                </div>
                                 <div class="form-group">
                                {{ form_row(registrationForm.address) }}
                                </div>
                                 <div class="form-group">
                                {{ form_row(registrationForm.city) }}
                                </div>
                                <div class="row">
                                    <div class="col-sm-6 mb-sm-0">
                                        {{ form_row(registrationForm.zipCode) }}
                                    </div>
                                    <div class="col-sm-6">
                                        {{ form_row(registrationForm.country) }}
                                    </div>
                                </div>
                                <div class="form-group">
                                {{ form_row(registrationForm.plainPassword) }}
                                </div>
                                <div class="form-group">
                                {{ form_row(registrationForm.roles) }}
                                </div>
                                <div class="form-group">
                                {{ form_row(registrationForm.rgpdConsent, {
                                    label : "I agree with RGPD terms"
                                }) }}
                                </div>

                                <button type="submit" class="btn btn-primary btn-user btn-block">Register</button>
                            {{ form_end(registrationForm) }}
                            <hr>
                            <div class="text-center">
                                <a class="small" href="{{path('app_login')}}">Already have an account? Login!</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
{% endblock %}