{% extends 'base.html.twig' %}

{% block title %}Panier{% endblock %}

{% block body %}
<h1 class="text-center">Panier</h1>
{% if items|length > 0 %}
    <table class="table">
        <thead>
            <tr>
                <th>product</th>
                <th>price</th>
                <th>quantity</th>
                <th>Total</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            {% for item in items %}
                <tr>
                    <td>{{item.product.name}}</td>
                    <td>{{item.product.price}}</td>
                    <td>{{item.quantity}}</td>
                    <td>{{item.product.price * item.quantity }}€</td>
                    <td>
                        <a href="{{path('app_cart_remove',{'id':item.product.id})}}" class="btn btn-danger btn-md">
                            remove</i>
                        </a>
                    </td>
                </tr>
            {% endfor %}
        </tbody>
        <tfoot>
            <tr>
                <td colspan="3" class="text-right">Total : </td>
                <td>{{total}} €</td>
                <td></td>
            </tr>
        </tfoot>
    </table>

{% else %}
<p>vide</p>
{% endif %}

{% endblock %}
